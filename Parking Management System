<body>
  <div class="card">
    <h1>GV Visitor Parking</h1>
    <p class="subtitle">Check-in pelawat untuk lot GV01 – GV33.</p>

    <form id="checkinForm">
      <label for="category">Visitor Category</label>
      <select id="category" required>
        <option value="">Please select</option>
        <option value="Family">Family</option>
        <option value="Friend">Friend</option>
        <option value="Staff Mahsing">Staff Mahsing</option>
        <option value="Vendor">Vendor</option>
      </select>

      <label for="plate">Car Plate</label>
      <input id="plate" type="text" maxlength="20" placeholder="Contoh: VBS1234" required>

      <label for="visitorName">Visitor Name</label>
      <input id="visitorName" type="text" placeholder="Nama pelawat">

      <label for="phone">Phone No.</label>
      <input id="phone" type="tel" placeholder="Contoh: 0123456789">

      <label for="lotId">Parking Lot</label>
      <select id="lotId" required></select>

      <label for="guardName">Guard Name</label>
      <input id="guardName" type="text" placeholder="Nama guard (optional)">

      <button type="submit" id="submitBtn">Check-In</button>
      <div class="status" id="statusMsg"></div>
    </form>
  </div>

  <script>
    const API_URL = 'PASTE_YOUR_WEB_APP_URL_HERE'; // <-- tukar di sini

    // Generate dropdown GV01–GV33
    const lotSelect = document.getElementById('lotId');
    for (let i = 1; i <= 33; i++) {
      const num = i.toString().padStart(2, '0');
      const val = 'GV' + num;
      const opt = document.createElement('option');
      opt.value = val;
      opt.textContent = val;
      lotSelect.appendChild(opt);
    }

    const form = document.getElementById('checkinForm');
    const statusMsg = document.getElementById('statusMsg');
    const submitBtn = document.getElementById('submitBtn');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      statusMsg.textContent = '';
      statusMsg.className = 'status';

      const payload = {
        lotId: lotSelect.value,
        plate: document.getElementById('plate').value.trim().toUpperCase(),
        visitorName: document.getElementById('visitorName').value.trim(),
        phone: document.getElementById('phone').value.trim(),
        category: document.getElementById('category').value,
        guardName: document.getElementById('guardName').value.trim()
      };

      if (!payload.lotId || !payload.plate || !payload.category) {
        statusMsg.textContent = 'Sila lengkapkan field wajib.';
        statusMsg.classList.add('err');
        return;
      }

      submitBtn.disabled = true;
      submitBtn.textContent = 'Processing...';

      try {
        const res = await fetch(API_URL + '?action=checkin', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        });
        const data = await res.json();
        if (data.success) {
          statusMsg.textContent = data.message || 'Check-in berjaya.';
          statusMsg.classList.add('ok');
          form.reset();
        } else {
          statusMsg.textContent = data.message || 'Check-in gagal.';
          statusMsg.classList.add('err');
        }
      } catch (err) {
        statusMsg.textContent = 'Error sambungan. Cuba lagi.';
        statusMsg.classList.add('err');
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = 'Check-In';
      }
    });
  </script>
</body>
</html>
